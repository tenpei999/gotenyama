.c-sun-light li 
  width 0 
  height 0
  position absolute
  border-style solid
  //1度を形成する角錐のサイズ 上105vw 横10vh 下0
  border-width 200vw 10vh 0
  //border-color #f00 transparent transparent 
  for i in (1..100)
    &:nth-of-type({i})
      transform rotate(i * 1.15 deg) translate3d(0, 0, 0)
      //グラデーション
      border-image linear-gradient(to bottom, hsla( - 100, 100%, 50%, 1),hsla( - 100, 100%, 50%, .5),hsla( - 100, 100%, 50%, .1),hsla( - 100, 100%, 50%, 0)) 100% / 80vw 5.5vh 0  
      animation sun-beam 12.5s i * 0.2083333333s + 12.5s infinite alternate

@keyframes sun-beam {
  0% {
    opacity: 0;
	}
	50% {
    opacity: 1;
	}
	100% {
    opacity: 0;
	}
}
    